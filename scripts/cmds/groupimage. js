const fs = require("fs-extra");
const axios = require("axios");
const path = require("path");

module.exports.config = {
  name: "groupimage",
  version: "1.0.0",
  hasPermission: 0,
  credits: "ğ‚ğ˜ğğ„ğ‘ â˜¢ï¸_ğ–£˜ -ğğğ“ âš ï¸ ğ‘»ğ‘¬ğ‘¨ğ‘´_ â˜¢ï¸",
  description: "Change your group image by replying to a photo",
  commandCategory: "Box",
  usages: "groupimage",
  cooldowns: 0,
  dependencies: ["axios", "fs-extra"]
};

module.exports.run = async function({ api, event }) {
  if (event.type !== "message_reply") 
    return api.sendMessage("âŒ You have to reply to a photo!", event.threadID, event.messageID);

  if (!event.messageReply.attachments || event.messageReply.attachments.length === 0) 
    return api.sendMessage("âŒ You have to reply to a photo!", event.threadID, event.messageID);

  if (event.messageReply.attachments.length > 1) 
    return api.sendMessage("âŒ Please reply only 1 photo!", event.threadID, event.messageID);

  try {
    const imageUrl = event.messageReply.attachments[0].url;
    const cacheDir = path.join(__dirname, "cache");
    if (!fs.existsSync(cacheDir)) fs.mkdirSync(cacheDir);

    const pathImg = path.join(cacheDir, "groupimage.png");
    const response = await axios.get(imageUrl, { responseType: "arraybuffer" });
    await fs.writeFile(pathImg, Buffer.from(response.data));

    api.changeGroupImage(fs.createReadStream(pathImg), event.threadID, () => {
      fs.unlinkSync(pathImg);
    }, event.messageID);
  } catch (error) {
    console.error(error);
    return api.sendMessage("âŒ Failed to change group image.", event.threadID, event.messageID);
  }
};
